{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'welcome-banner'
  ]
%}
<section {{ attributes.addClass(classes) }}>
  {{ title_suffix }}
  {# content.field_title.0["#context"].value #}
  <div class="l-container">
  <div class="welcome-banner__container">
    {# To allow html inside the title, we will pipe the title value into "raw" #}
    <h1 class="welcome-banner__title">{{content.field_title.0['#context'].value|striptags('<br>')|raw}}</h1>
    <p class="welcome-banner__text">“Discover your own style. Don't try to repeat what has already been
          written - have the courage to do your own thing and don't be afraid to
          do something different.”</p>
      <a href="#" class="button button--alt">About Us</a>
    </div>
  </div>
</section>

